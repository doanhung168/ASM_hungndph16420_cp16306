<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/customBackground"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thống kê theo ngày"
        android:textColor="#094930"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/tvNgayBD"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:hint="Chọn ngày bắt đầu" />

    <EditText
        android:id="@+id/tvNgayKT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:hint="Chọn ngày kết thúc" />

    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnHuy"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:text="Hủy" />
        <Button
            android:id="@+id/btnTimKiem"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:layout_marginLeft="50dp"
            android:text="Kết quả" />

    </LinearLayout>

</LinearLayout>